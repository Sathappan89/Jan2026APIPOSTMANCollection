          "script": {
            "exec": [
              "var template = `",
              "<table style=\"width:100%; border-collapse: collapse; font-family: Arial;\">",
              "<tr style=\"background-color:#ff7f39; color:white; text-align:left;\">",
              "    <th style=\"padding:8px; border:1px solid #ddd;\">ID</th>",
              "    <th style=\"padding:8px; border:1px solid #ddd;\">Title</th>",
              "    <th style=\"padding:8px; border:1px solid #ddd;\">Content</th>",
              "    <th style=\"padding:8px; border:1px solid #ddd;\">CreatedAt</th>",
              "    <th style=\"padding:8px; border:1px solid #ddd;\">UpdatedAt</th>",
              "</tr>",
              "{{#each response}}",
              "<tr style=\"background-color:#f9f9f9;\">",
              "    <td style=\"padding:8px; border:1px solid #ddd;\">{{id}}</td>",
              "    <td style=\"padding:8px; border:1px solid #ddd;\">{{title}}</td>",
              "    <td style=\"padding:8px; border:1px solid #ddd;\">{{content}}</td>",
              "    <td style=\"padding:8px; border:1px solid #ddd;\">{{createdAt}}</td>",
              "    <td style=\"padding:8px; border:1px solid #ddd;\">{{updatedAt}}</td>",
              "</tr>",
              "{{/each}}",
              "</table>",
              "`;",
              "",
              "pm.visualizer.set(template, {",
              "    response: pm.response.json()",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
